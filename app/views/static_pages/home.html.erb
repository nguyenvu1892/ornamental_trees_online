<div class="slider row">
  <ul class="slides">
    <li>
      <%= image_tag "islider-1.png", style: "width: 100%; height: 100%" %>
      <div class="caption left-align" style="top: 3%;">
      </div>
    </li>

    <li>
      <%= image_tag "slide_2.jpg", style: "width: 100%; height: 100%" %>
      <div class="caption left-align" style="top: 3%;">
      </div>
    </li>

    <li>
      <%= image_tag "slide_3.jpg", style: "width: 100%; height: 100%" %>
      <div class="caption left-align" style="top: 3%;">
      </div>
    </li>

    <li>
      <%= image_tag "slide_4.jpg", style: "width: 100%; height: 100%" %>
      <div class="caption left-align" style="top: 3%;">
      </div>
    </li>
  </ul>
</div>

<div class="row row-space-home-page"></div>
  <div class="container" id="customize-home-container">
    <div class="row">
      <div class="col s12 m6 l9">
        <%= form_tag(products_path, remote: true, method: :get) do %>
          <div class="input-field">
            <div class="card z-depth-1">
              <div class="search-box-article">
                <i class="material-icons md-36 prefix">search</i>
                <%= text_field_tag :search_text, params[:search_text], placeholder: (t "static_pages.home.search")%>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  <div class="col s12 m12 l9" id="container-products">
    <% if @products.present? && @products.count > 0 %>
      <div class="row row-latest-home-items">
        <%= render "shared/product" %>
      </div>

      <div class="apple_pagination">
        <%= will_paginate @products %>
      </div>
    <% end %>
  </div>
</div>
